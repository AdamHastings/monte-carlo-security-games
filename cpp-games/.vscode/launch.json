{
  "version": "0.2",
  "configurations": [
    {
      "name": "C++ Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/run_games_debug", // Path to your compiled executable
      "args": ["configs/test_medium.json"],
      "cwd": "${workspaceFolder}",
      "environment": [{ "name": "config", "value": "Debug" }],
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
      ],
      "miDebuggerArgs": "-exec run"
    }
  ]
}
  