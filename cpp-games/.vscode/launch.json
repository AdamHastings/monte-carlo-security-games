{
  "version": "0.2",
  "configurations": [
    {
      "name": "C++ Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/run/debug/run_games", // Path to your compiled executable
      "args": ["configs/fullsize_tiny.json"],
      "cwd": "${workspaceFolder}",
      "environment": [{ "name": "config", "value": "Debug" }],
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
      ],
      "miDebuggerArgs": "-exec run"
    },
    {
      "name": "Unit Test Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/test/test", // Path to your compiled executable
